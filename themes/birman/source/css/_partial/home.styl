.home-inner
    color: #000
    background: #fff
    box-sizing: border-box
    .home-intro
        display: flex
        align-items: center
        margin: 0 auto
        font-size: 2.2em
        background: linear-gradient(#33363b, #33363b), linear-gradient(#666, #666), linear-gradient(#999, #999), linear-gradient(#bbb, #bbb)
        background-color: #eee
        background-size: 50px 50px, 100px 100px, 150px 150px, 200px 200px
        background-repeat: no-repeat
        padding: 40px 40px 40px 240px
        box-sizing: border-box;
        height: 200px;
    .home-content
        padding: 40px
        ul
            display: flex
            align-items: flex-end
            justify-content: space-around
            li
                list-style: none

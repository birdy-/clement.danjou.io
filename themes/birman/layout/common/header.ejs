<% var thumbnailUrl = thumbnail(page) %>
<% if (thumbnailUrl) { %>
<header id="header" class="header-with-image">
    <div style="background-image: url(<%- thumbnailUrl %>)" class="header-image"></div>
<% } else { %>
<header id="header">
<% } %>
    <div id="header-outer" class="outer">
        <h1 class="header-title">
            <a href="<%- url_for() %>" class="head-title-link"><span class="white">Cl√©ment</span><span class="colored">Danjou</span></a>
         </h1>
        <% if (page.title) { %>
            <h2 class="article-title">
                <span><%= page.title %></span>
            </h2>
        <% } %>
        <div id="header-inner" class="nav-container">
            <a id="main-nav-toggle" class="nav-icon fa fa-bars"></a>
            <div class="nav-container-inner">
                <ul id="main-nav">
                    <% for (var i in theme.menu) {
                            if (i == 'Categories') { %>
                                <%- list_categories({
                                    depth: 2,
                                    style: 'list',
                                    class: 'main-nav',
                                    show_count: false,
                                }) %>
                            <% } else { %>
                        <li class="main-nav-list-item" >
                            <a class="main-nav-list-link" href="<%- url_for(theme.menu[i]) %>"><%= __('index.' + i.toLowerCase()) %></a>
                        </li>
                    <% }} %>
                </ul>
                <nav id="sub-nav">
                    <%- partial('search/index') %>
                </nav>
            </div>
        </div>
    </div>
</header>

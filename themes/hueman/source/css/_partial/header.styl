#header
    background: #333
    background: linear-gradient(135deg, #000, #888);
    padding-bottom: nav-height
    position: relative

#header-outer
    height: 100%
    position: relative

#header-inner
    position: relative

#header-title
    line-height: 70px
    padding: 45px 0px
    .head-title
        display: inline-block
        font-size: 36px
        font-weight: bold
        .head-title-link
          color: #333
          text-decoration: none
        .white, .colored
          padding: 8px 16px
        .white
            background: #fff
            border-right: 4px solid #ddd
        .colored
            border-left: 2px solid #e9a10f
            color: #fff
            background: #ffb215
    .subtitle
        display: inline-block
        margin-left: 30px
        font-size: 16px
        font-style: italic
        color: color-nav-foreground
        text-shadow: 0 1px rgba(0, 0, 0, 0.2)
